# This script updates the value of "environment" in the the thin config file.

require "yaml"
require "erb"

if ARGV.length != 1
  puts "usage: set_rails_env <value>"
  exit 1
end

@rails_env = ARGV[0]

# update thin server config
config = YAML::load_file("/etc/thin/app.yml")
config["environment"] = @rails_env
File.open("/etc/thin/app.yml", 'w') do |f|
  YAML.dump(config, f)
end
